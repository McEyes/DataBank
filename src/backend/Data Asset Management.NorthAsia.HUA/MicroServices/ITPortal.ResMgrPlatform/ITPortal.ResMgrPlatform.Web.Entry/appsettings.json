{
  "$schema": "https://gitee.com/dotnetchina/Furion/raw/v4/schemas/v4/furion-schema.json",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppInfo": {
    "Name": "ITPortal Resource Management Platform",
    "Version": "1.0.0",
    "Company": "Jabil"
  },
  "AppSettings": {
    "InjectMiniProfiler": true,
    "InjectSpecificationDocument": true // 关闭furion的swagger文档
  },
  "CorsAccessorSettings": {
    "PolicyName": "Negotiate",
    "WithOrigins": [ "http://localhost:4200", "http://cnhuam0webstg85:6002", "http://cnhuam0webstg85:6001", "http://cnhuam0webstg85:6010", "http://cnhuam0itds01:6000", "http://cnhuam0itds01:6001", "http://cnhuam0itds01:6002", "http://cnhuam0itds01:6005", "http://cnhuam0itds01:6006", "http://cnhuam0itds01:4200", "http://cnhuam0itds01", "http://cnhuam0itds02", "http://cnhuam0itds03" ],
    "AllowCredentials": true, //默认已经是true
    "SignalRSupport": true,
    "WithExposedHeaders": [ "X-Pagination", "access-token", "x-access-token" ]
  },
  "LocalizationSettings": {
    "SupportedCultures": [ "zh-CN", "en-US" ], // 配置支持的语言列表
    "DefaultCulture": "zh-CN" // 配置默认语言，如果不配置，取 SupportedCultures 的第一项
  },
  "SpecificationDocumentSettings": {
    //"DocumentTitle": "数据资产Api服务",
    //"DefaultGroupName": "DataAssetManager",
    "EnableAuthorized": true,
    "RoutePrefix": "",
    "DocExpansionState": "List",
    "EnableXmlComments": true
  },
  "JWTSettings": {
    "ValidateIssuerSigningKey": true, // 是否验证密钥，bool 类型，默认true
    "IssuerSigningKey": "=******=", // 密钥，string 类型，必须是复杂密钥，长度大于16
    "ValidateIssuer": true, // 是否验证签发方，bool 类型，默认true
    "ValidIssuer": "YHWmsOperationApiGateway", // 签发方，string 类型
    "ValidateAudience": true, // 是否验证签收方，bool 类型，默认true
    "ValidAudience": "JabilService", // 签收方，string 类型
    "ValidateLifetime": true, // 是否验证过期时间，bool 类型，默认true，建议true
    "ExpiredTime": 259200, // 过期时间，long 类型，单位分钟，默认20分钟, 默认刷新时间：43200
    "ClockSkew": 5, // 过期时间容错值，long 类型，单位秒，默认 5秒
    "Algorithm": "HS256" // 加密算法，string 类型，默认 SecurityAlgorithms.HmacSha256
  },
  "UnifyResultSettings": {
    "Return200StatusCodes": [ 401, 403 ],
    "AdaptStatusCodes": [
      [ 401, 200 ],
      [ 403, 401 ]
    ],
    "SupportMvcController": false
  },
  "DynamicApiControllerSettings": {
    "VerbToHttpMethods": [
      [ "getall", "HEAD" ], // => getall 会被复写为 `[HttpHead]`
      [ "other", "PUT" ] // => 新增一条新规则，比如，一 `[other]` 开头会转换为 `[HttpPut]` 请求
    ]
  },
  "ValidationTypeMessageSettings": {
    "Definitions": [
      [ "Required", "值不能为空或Null" ],
      [ "Numeric", "必须是数值类型" ],
      [ "StrongPassword", "密码太简单了!!!" ]
    ]
  },
  "Consul": {
    "Enabled": true,
    "Host": "http://cnhuam0itds04:8500/",
    "Token": "=******",
    "Service": "resource",
    //"ServiceUrl": "http://cnhuam0appprd01:6003",
    "Port": 7003
  },
  "FileStorageOptions": {
    "SharedDirectoryPath": "\\\\10.114.18.93\\DataBankResource", // Windows: \\fileserver\share\uploads, Linux: //fileserver/share/uploads
    "Username": "itressmbuser",
    "Password": "itresuser@W#E2025",
    "Domain": "jabil" // 可选，如不需要可留空
  }
}