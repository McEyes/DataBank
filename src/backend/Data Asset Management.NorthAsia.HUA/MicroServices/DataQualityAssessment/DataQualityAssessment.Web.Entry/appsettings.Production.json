{
  "$schema": "https://gitee.com/dotnetchina/Furion/raw/v4/schemas/v4/furion-schema.json",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Error",
        "Serilog.AspNetCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/logs-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 5
        }
      }
    ]
  },
  "JWTSettings": {
    "ValidateIssuerSigningKey": true, // 是否验证密钥，bool 类型，默认true
    "IssuerSigningKey": "password=", // 密钥，string 类型，必须是复杂密钥，长度大于16
    "ValidateIssuer": true, // 是否验证签发方，bool 类型，默认true
    "ValidIssuer": "YHWmsOperationApiGateway", // 签发方，string 类型
    "ValidateAudience": true, // 是否验证签收方，bool 类型，默认true
    "ValidAudience": "JabilService", // 签收方，string 类型
    "ValidateLifetime": true, // 是否验证过期时间，bool 类型，默认true，建议true
    "ExpiredTime": 259200, // 过期时间，long 类型，单位分钟，默认20分钟, 默认刷新时间：43200
    "ClockSkew": 5, // 过期时间容错值，long 类型，单位秒，默认 5秒
    "Algorithm": "HS256" // 加密算法，string 类型，默认 SecurityAlgorithms.HmacSha256
  },
  "CorsAccessorSettings": {
    "PolicyName": "Default",
    "WithOrigins": [ "http://cnhuam0webstg85:6002", "http://cnhuam0itds01", "http://cnhuam0itds02", "http://localhost:4200" ],
    "AllowCredentials": true, //默认已经是true
    "SignalRSupport": true,
    "WithExposedHeaders": [ "X-Pagination", "access-token", "x-access-token" ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DataQualityAssessment": "PORT=5432;DATABASE=DataQualityAssessment;HOST=cnhuam0itds03;PASSWORD=password;USER ID=password",
    "DataAsset": "PORT=5432;DATABASE=ITPortal_DataAsset;HOST=cnhuam0itds03;PASSWORD=password;USER ID=password"
  },
  "Consul": {
    "Enabled": true,
    "Address": "http://cnhuam0itds02:8500",
    "Service": "dataquality",
    "ServiceID": "dataquality",
    "SelfUrl": "http://cnhuam0itds01:7701"
  }
}