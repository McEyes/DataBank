    "ClockSkew": 5, // 过期时间容错值，long 类型，单位秒，默认 5秒
    "Algorithm": "HS256" // 加密算法，string 类型，默认 SecurityAlgorithms.HmacSha256
  },
  "UnifyResultSettings": {
    "Return200StatusCodes": [ 401, 403 ],
    "AdaptStatusCodes": [
      [ 401, 200 ],
      [ 403, 401 ]
    ],
    "SupportMvcController": false
